<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edMaPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Nhập mã phiếu mượn"
            android:textSize="16dp" />
        <Spinner
            android:id="@+id/spMaTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16dp"/>
        <Spinner
            android:id="@+id/spMaSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/tvNgay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvTienThue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <CheckBox
            android:id="@+id/chkTraSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Trả sách"
            android:textColor="@color/black"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btnSavePM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CACCAC"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="22dp" />
        <Button
            android:id="@+id/btnCancelPM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CACCAC"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>
</LinearLayout>

